{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "ðŸš€ Launch Full Stack",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/.bin/concurrently",
      "args": [
        "\"npm run dev:backend\"",
        "\"npm run dev:frontend\""
      ],
      "console": "integratedTerminal",
      "restart": true
    },
    {
      "name": "ðŸ”§ Debug Backend",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/backend/server.js",
      "cwd": "${workspaceFolder}/backend",
      "env": {
        "NODE_ENV": "development"
      },
      "restart": true,
      "console": "integratedTerminal"
    },
    {
      "name": "ðŸŽ¨ Debug Frontend",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/.bin/vite",
      "args": ["dev"],
      "cwd": "${workspaceFolder}/frontend",
      "console": "integratedTerminal"
    },
    {
      "name": "ðŸ§ª Run Tests",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/.bin/jest",
      "args": ["--runInBand"],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    }
  ],
  "compounds": [
    {
      "name": "ðŸš€ Launch Full Stack (Compound)",
      "configurations": ["ðŸ”§ Debug Backend", "ðŸŽ¨ Debug Frontend"]
    }
  ]
}
